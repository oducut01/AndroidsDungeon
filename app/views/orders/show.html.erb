<h3 class="title is-3">Order Details</h3>

<div class="box">

  <p class="title is-5">
    Shipping Address:
    <p class="subtitle is-6">
      <%= @order.name %><br />
      <%= @order.address %><br />
      <%= @order.city %>,
      <%= @order.customer.province.name %>, Canada<br />
      <%= @order.postalCode %>
    </p>
  </p>

  <p class="title is-5">
    Items:
    <div class="columns">

      <p class="subtitle is-6">
        <div class="column">
          <% @order.cart_products.each do |cart_product| %>
              <%= cart_product.product.name %> x <%= cart_product.quantity %><br/>
          <% end %>
        </div>

        <div class="column">
          <% @order.cart_products.each do |cart_product| %>
              <%= "test" %><br/>
          <% end %>
        </div>
      </p>

    </div>
  </p>





</div>